<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/background"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    app:contentPadding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Imagem do dispositivo -->
        <ImageView
            android:id="@+id/imgDeviceSaved"
            android:layout_width="70dp"
            android:layout_height="135dp"
            android:padding="3dp"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/ic_device_unknown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Informações do dispositivo -->

        <!-- Botão de Editar -->

        <TextView
            android:id="@+id/txtDeviceNameSaved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="25"
            android:text="Device Name"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/txtDescriptionSaved"
            app:layout_constraintTop_toTopOf="@+id/imgDeviceSaved" />

        <TextView
            android:id="@+id/deviceIp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP:"
            app:layout_constraintStart_toEndOf="@+id/imgDeviceSaved"
            app:layout_constraintTop_toBottomOf="@+id/txtDescriptionSaved" />

        <!-- Botão de Salvar (adicionado) -->

        <TextView
            android:id="@+id/txtDescriptionSaved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="25"
            android:text="Description"
            app:layout_constraintStart_toEndOf="@+id/imgDeviceSaved"
            app:layout_constraintTop_toBottomOf="@+id/txtDeviceNameSaved" />

        <TextView
            android:id="@+id/txtMacAdressSaved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="MAC Adress"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/txtIpAdressSaved" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAC:"
            app:layout_constraintStart_toEndOf="@+id/imgDeviceSaved"
            app:layout_constraintTop_toBottomOf="@+id/deviceIp" />

        <TextView
            android:id="@+id/txtIpAdressSaved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="IP Adress"
            app:layout_constraintStart_toEndOf="@+id/deviceIp"
            app:layout_constraintTop_toBottomOf="@+id/txtDescriptionSaved" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manufacturer:"
            app:layout_constraintStart_toEndOf="@+id/imgDeviceSaved"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/txtManufacturerSaved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:maxLength="15"
            android:text="Manufacturer"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/txtMacAdressSaved" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model:"
            app:layout_constraintStart_toEndOf="@+id/imgDeviceSaved"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/txtModelSaved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="Model"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/txtManufacturerSaved" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:"
            app:layout_constraintBottom_toBottomOf="@+id/imgDeviceSaved"
            app:layout_constraintStart_toEndOf="@+id/imgDeviceSaved"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/txtLocationSaved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="Location"
            app:layout_constraintBottom_toBottomOf="@+id/imgDeviceSaved"
            app:layout_constraintStart_toEndOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/txtModelSaved" />

        <CheckBox
            android:id="@+id/checkBoxSavedDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnDeleteDevice"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#A40F0F"
            android:padding="0dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="#FFFCFC"
            android:textSize="12sp"
            app:cornerRadius="50dp"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView14"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>