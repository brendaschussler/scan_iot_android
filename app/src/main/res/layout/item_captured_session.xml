<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/background"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    app:contentPadding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Session ID (shortened) -->
        <TextView
            android:id="@+id/txtSessionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session: ABC123..."
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Session Date -->
        <TextView
            android:id="@+id/txtSessionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSessionId"
            tools:text="01/01/2023 14:30" />

        <!-- Capture Type -->
        <TextView
            android:id="@+id/txtCaptureType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSessionDate"
            tools:text="Type: Time Limit" />

        <!-- Devices Count -->
        <TextView
            android:id="@+id/txtDevicesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCaptureType"
            tools:text="Devices: 5" />

        <!-- Session Status -->
        <TextView
            android:id="@+id/txtSessionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDevicesCount"
            tools:text="Active" />

        <!-- Progress Bar (for active sessions) -->
        <ProgressBar
            android:id="@+id/progressBarSession"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/txtSessionProgress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSessionStatus" />

        <TextView
            android:id="@+id/txtSessionProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/progressBarSession"
            app:layout_constraintTop_toBottomOf="@+id/txtSessionStatus"
            tools:text="75%" />

        <!-- Action Buttons -->
        <Button
            android:id="@+id/btnStopSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#A40F0F"
            android:text="Stop Session"
            android:textAllCaps="false"
            android:textColor="#FFFCFC"
            android:textSize="12sp"
            app:cornerRadius="50dp"
            app:layout_constraintEnd_toStartOf="@+id/btnDeleteSession"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBarSession" />

        <Button
            android:id="@+id/btnDeleteSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#A40F0F"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="#FFFCFC"
            android:textSize="12sp"
            app:cornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnStopSession"
            app:layout_constraintTop_toBottomOf="@+id/progressBarSession" />

        <Button
            android:id="@+id/btnViewDevices"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:backgroundTint="#4CAF50"
            android:text="View Devices"
            android:textAllCaps="false"
            android:textColor="#FFFCFC"
            android:textSize="12sp"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSessionStatus" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>